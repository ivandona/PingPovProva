<!doctype html>
<html lang="en">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"
    integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
  <link href="Navbar.html" rel="import" />
  <title>Prenota un tavolo</title>
</head>

<body style="background-color: rgb(66,63,63); color:rgb(115,102,102);">
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <img src="/images/Logo_Ping_Pov.png" width="70px" height="70px" href="/v1/home">


    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
      aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">

      <ul class="navbar-nav mr-auto">

        <li class="nav-item active">
          <a class="nav-link px-4" href="/v1/tornei"><b>Tornei</b><span class="sr-only">(current)</span> </a>
        </li>
        <li class="nav-item active">
          <a class="nav-link px-4" href="/v1/prenotazioni"><b>Prenotazione Tavolo</b><span
              class="sr-only">(current)</span> </a>
        </li>
        <li class="nav-item active">
          <a class="nav-link px-4" href="/v1/leaderboard"><b>Leaderboard</b><span class="sr-only">(current)</span> </a>
        </li>
      </ul>
      <form class="form-inline my-2 my-lg-0">
        <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
        <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Ricerca utente</button>
      </form>
      <% if(session.logged==true) { %>
        <ul class="navbar-nav flex-row ml-md-auto d-none d-md-flex">
          <li class="nav-item px-3">
            <a class="btn btn-outline-danger btn-sm" href="/v1/auth/logout" role="button">Logout<span
                class="sr-only">(current)</span> </a>
          </li>
          <li> <a href="/v1/success"><img src="<%=session.user_image%>" alt="profile pic" width="50px" height="50px"
                style="border-radius: 50%;"></a>
          </li>
          <li class="nav-item px-3">
            <a class="nav-text">
              <%=session.username%>
            </a>
            <img src="/images/rank_imgs/bronze.png" alt="profile_rank" width="20px" height="20px">
            <br>
            <%=session.rank%>
              rank #53
          </li>
          <% } else{ %>
            <li class="nav-item active">
              <a class="nav-link" href="/v1/auth"><b>Login</b></a>
            </li>
            <%}%>


        </ul>


    </div>
  </nav>


  <form action="/v1/prenotazioni" method="get">
    <input type="date" id="data" name="data">
    <input type="time" id="ora" name="ora">

    <select id="sede" name="sede">
      <option value="Povo0">Povo0</option>
      <option value="Povo1">Povo1</option>
    </select>
    <input type="submit" value="Ricerca">
  </form>



  <% var day=new Date(Date.parse(query['data'] + 'T' +query['ora'] +':00'));%>
    <div class="jumbotron" style="background-color: rgb(66,63,63); color:rgb(115,102,102);">
      <% for (let i=0; i < prenotazioni.length; i++){%>
        <div style="border-top: solid;">
          <% if(query['sede']==prenotazioni[i]['sede']){ if(day < prenotazioni[i]['giorno'] ){ %>

            <%=prenotazioni[i]['giorno'] %> <br>
              <%=prenotazioni[i]['sede']%> <br>
                prenotatore : <%=prenotazioni[i]['prenotatore']%> <br>

                  <a id="prenotazione<%=i%>" hidden>
                    <%=prenotazioni[i]['id']%>
                  </a>
        </div>
        <% if(prenotazioni[i]['prenotatore']=="" ){ %>
          <button onclick="fetch('/v1/aggiungiPrenotazione/<%=prenotazioni[i]['id']%>' ,{
        method: 'PUT',
        headers: {
          'Accept': 'application/json',
          'Content-Type': 'application/json'
        },
        body: JSON.stringify({
          prenotatore: sessionStorage.getItem('utente'),
        })
      });
      setTimeout('',2000);
      window.location.reload();
    " style="background-color:green; color: rgb(115,102,102);"> Prenota </button>

          <% } else{%>
            <Button disabled style="background-color:firebrick; color: rgb(115,102,102);"> Prenotato</Button>


            <button onclick=" fetch('/v1/rimuoviPrenotazione/<%=prenotazioni[i]['id']%>' ,{
        method: 'DELETE',
        headers: {
          'Accept': 'application/json',
          'Content-Type': 'application/json'
        },
        body: JSON.stringify({
          prenotatore: '',
        })
      });
      setTimeout('',2000);
      window.location.reload();
    " style="background-color:lightslategray; color: rgb(115,102,102);"> Annulla prenotazione </button>
            <%}}}}%>

    </div>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->


    <script>

      let name = sessionStorage.getItem('utente');
      document.getElementById("username").innerHTML = name;
    </script>


    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"
      integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj"
      crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
      integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
      crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"
      integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI"
      crossorigin="anonymous"></script>
</body>

</html>
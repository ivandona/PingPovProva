<!doctype html>
<html>

<head>
  <title>Lista Tornei</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
  <!-- load bulma css -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
  <!-- load fontawesome -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/brackets-viewer@latest/dist/brackets-viewer.min.css" />


</head>

<body>
  <%- include('navbar.ejs') %>

    <div class="container">
      <div class="jumbotron">
        <table class="table table-striped">
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">Nome Torneo</th>
              <th scope="col">Giocatori</th>
              <th scope="col">Data</th>
              <th scope="col">Sede</th>
              <th scope="col">Organizzatore</th>
              <th scope="col"></th>
            </tr>
          </thead>
          <a class="btn btn-danger" href="/v1/tornei/creaTorneo" role="button">Crea torneo</a>
          <tbody id="t_body">
          </tbody>
        </table>
      </div>
    </div>
    </div>
    <script>
      class Torneo {
        constructor(data) {
          data['_id'] = data['_id'].replace(' new ObjectId("', '')
          data['_id'] = data['_id'].replace('")', '')
          Object.assign(this, data);
        };
      }
      async function req() {
        var tornei = []
        var xhr = new XMLHttpRequest();
        xhr.open("GET", "/v1/tornei", true);
        xhr.onload = function (e) {
          if (xhr.readyState === 4) {
            if (xhr.status === 200) {
              data = JSON.parse(xhr.responseText);
              for (let i = 0; i < data.length; i++) {
                tornei.push(new Torneo(data[i]))
              }
              createTable(tornei)
            } else {
              console.error(xhr.statusText);
            }
          }
        };
        xhr.onerror = function (e) {
          console.error(xhr.statusText);
        };

        xhr.send(null);
        createTable(tornei)
      }
      function createTable(tornei) {
        tbody = document.getElementById('t_body');
        let cells = ""
        for (let i = 0; i < tornei.length; i++) {
          cells += "<tr>\n"
          cells += "<td>"
          cells += (i + 1)
          cells += "</td>\n"
          cells += "<td>"
          cells += "<a href='/v1/tornei/" + tornei[i]['_id'] + "'>" + tornei[i]['nome_torneo'] + "</a>"
          cells += "</td>\n"
          cells += "<td>"
          cells += tornei[i]['giocatori'].length + "/" + tornei[i]['max_partecipanti']
          cells += "</td>\n"
          cells += "<td>"
          cells += tornei[i]['data']
          cells += "</td>\n"
          cells += "<td>"
          cells += tornei[i]['sede']
          cells += "</td>\n"
          cells += "<td>"
          cells += tornei[i]['organizzatore']
          cells += "</td>\n"
          if (tornei[i]['giocatori'].includes('<%=user.displayName%>') == true) {
            cells += "<td id='tasto_disiscrivi'>"
            cells += '<button type="button" class="btn btn-danger" onclick="disiscriviti(\''+tornei[i]['_id']+'\')">Disiscriviti</button>'
            cells += "</td>\n"
          } else {
            cells += "<td id='tasto_iscriviti'>"
            cells += '<button type="button" class="btn btn-success" onclick="iscriviti(\''+tornei[i]['_id']+'\')">Iscriviti</button>'
            cells += "</td>\n"
          }
          cells += "</tr>\n"

        }
        tbody.innerHTML = cells
      }
      async function iscriviti(id) {
        var xhr = new XMLHttpRequest();
        xhr.open("POST", "/v1/iscrizione/?id=" + id, true);
        xhr.onload = function (e) {
          if (xhr.readyState === 4) {
            if (xhr.status === 200) {
              console.log(xhr.responseText)
              location.reload();
            } else {
              console.error(xhr.statusText);
            }
          }
        };
        xhr.onerror = function (e) {
          console.error(xhr.statusText);
        };

        xhr.send(null);
      }
      async function disiscriviti(id) {
        console.log('DISISCRIZIONE')
        var xhr = new XMLHttpRequest();
        console.log(id)
        xhr.open("DELETE", "/v1/iscrizione/?id=" + id, true);
        xhr.onload = function (e) {
          if (xhr.readyState === 4) {
            if (xhr.status === 200) {
              console.log(xhr.responseText)
              location.reload();
            } else {
              console.error(xhr.statusText);
            }
          }
        };
        xhr.onerror = function (e) {
          console.error(xhr.statusText);
        };

        xhr.send(null);
      }
      req();
    </script>
</body>

</html>